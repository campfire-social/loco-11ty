{% comment %} Image / Media Section : BEGIN {% endcomment %}
<section class="featurette">
  <div class="featurette__panel"></div>
  <div class="container">
    <div class="featurette__content">

      <div class="featurette__text">
        <div class="prose prose--lg">
          <h2 class="heading heading--two">
            <span class="eyebrow">Featured Product</span>
            Hey Neighbor, Whatcha' Griddlin?
          </h2>
          <div class="groove groove--blue"></div>
          <p class="text text--lg">Introducing Griddles from LoCo. Your new favorite way to cook. Featuring our
            SmartTemp technology, making
            it
            easy to dial in your desired cooking temperature in 25 degree increments and accurately maintain those
            precise
            cooking temperatures . Take the guesswork out of your griddlinâ€™ so you can easily repeat recipes time and
            time
            again!</p>
          <a class="btn btn--primary" href="#"><span>Shop Now</span></a>
        </div>
      </div>
      <div class="featurette__media">
        <figure class="video">
          <div class="video__wrapper">
            <img class="video__poster" src="/assets/images/video.jpg" alt="placeholder" style="width: 100%" />
            <button class="video__play" data-micromodal-trigger="modal-1">
              <svg width="39" height="51" viewBox="0 0 39 51" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M0.250122 0V50.23L5.03137 47.0335L33.7189 28.3115L38.5001 25.115L33.7189 21.9185L5.03137 3.19645L0.250122 0Z" />
              </svg>
              <span class="hidden-visually">Play Video</span>
            </button>
          </div>
        </figure>
      </div>
    </div>
  </div>
  <div id="modal-1" class="modal micromodal-slide" aria-hidden="true">

    <!-- [2] -->
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>

      <!-- [3] -->
      <div class="modal__container modal__container--lg" role="dialog" aria-modal="true"
        aria-labelledby="modal-1-title">

        <header>
          <h3 class="hidden-visually" id="modal-1-title">
            Modal Title
          </h3>

          <!-- [4] -->
          <button data-micromodal-close class="modal__close btn btn--link">
            <svg fill="#ffffff" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24px" height="24px">
              <path
                d="M 4.7070312 3.2929688 L 3.2929688 4.7070312 L 10.585938 12 L 3.2929688 19.292969 L 4.7070312 20.707031 L 12 13.414062 L 19.292969 20.707031 L 20.707031 19.292969 L 13.414062 12 L 20.707031 4.7070312 L 19.292969 3.2929688 L 12 10.585938 L 4.7070312 3.2929688 z" />
              </svg>
            <span class="hidden-visually">Close Modal</span>
          </button>
        </header>

        <div class="modal__content" id="modal-1-content">
          <style>
            .embed-container {
              position: relative;
              padding-bottom: 56.25%;
              height: 0;
              overflow: hidden;
              max-width: 100%;
            }

            .embed-container iframe,
            .embed-container object,
            .embed-container embed {
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
            }
          </style>
          <div class='embed-container'><iframe src='https://www.youtube.com/embed/QILiHiTD3uc' frameborder='0'
              allowfullscreen></iframe></div>
        </div>
      </div>
    </div>
  </div>
</section>
